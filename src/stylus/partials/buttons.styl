button, .btn
  color #4A4A4A
  background-color transparent
  font-family 'brandon_textbold', sans-serif
  cursor pointer
  padding buttonPadding
  border-radius 1px
  display inline-block
  border 4px solid #BD10E0

.btn
  color white !important
  display inline-block
  text-decoration none !important

.button-bar
  button
    border-left 1px solid canvas
  button:first-child
    border-radius 4px 0 0 4px
    border-left none
  button:last-child
    border-radius 0 4px 4px 0

button:hover, .btn:hover
  opacity 0.8

#viewProjectBtn.open
  position fixed
  width 100vw !important
  height 75vh !important
  top 0 !important
  left 0 !important
  background #BD10E0
  opacity 1 !important
  z-index 10
  transition all .2s ease-out
  margin 0
  
figure.thumb__item
	overflow hidden
	height 40vh
	img
		width 100%
		transform scale(1.3)
		transition transform 700ms cubic-bezier(0.250, 0.460, 0.450, 0.940)
	&:hover
		img
			transform scale(1.05)
		.thumb__caption
			transform translateY(0%)
	.thumb__caption
		position absolute
		bottom 0
		left 0
		z-index 1
		background rgba(0,0,0,.4)
		width 100%
		padding 15px
		font-size .75em
		color white
		transform translateY(100%)
		transition transform 700ms cubic-bezier(0.250, 0.460, 0.450, 0.940)
		h1
			margin-bottom 0
		a
			color white
@media only screen and (max-width: 375px) and (-webkit-min-device-pixel-ratio : 2)
	.three-col
		width 100% !important
	figure.thumb__item
		height 30vh
		.thumb__caption
			transform translateY(0%)
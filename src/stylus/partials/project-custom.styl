body, html, .main-content, #mainContent
  height 100%

.two-col
	background #FE5F55
	color white

.flex
	article:nth-of-type(1)
		width 100vw
		min-height 100vh
		height auto
		h1
			font-size 9em
	article:nth-of-type(6)
		width 100%
		height 100%
		h1
			font-size 2em
	article
		h1
			font-size 2em
#main-content
	margin-top 100px

@media only screen and (max-width: 375px) and (-webkit-min-device-pixel-ratio : 2)
  .flex
    article:nth-of-type(1)
      width 100vw
      min-height 100vh
      height auto
      h1
        font-size 4em